@model BarbershopEntity.Entity.ClientEntity

@{
    ViewData["Title"] = "Registrarse";
}


<div class="row">
    <div class="col-md-4"> </div>

    <div class="col-md-4">

        <img src="/image/Barber.png" class="BarberLogo">

        <form asp-action="SignupCreate">
            <div asp-validation-summary="ModelOnly" class="text-danger2"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label">Identificación</label>
                <input asp-for="Id" class="form-control textData" />
                <span asp-validation-for="Id" class="text-danger2"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Nombre</label>
                <input asp-for="Name" class="form-control textData" />
                <span asp-validation-for="Name" class="text-danger2"></span>
            </div>
            <div class="form-group">
                <label asp-for="Lastname" class="control-label">Apellido</label>
                <input asp-for="Lastname" class="form-control textData" />
                <span asp-validation-for="Lastname" class="text-danger2"></span>
            </div>
            <div class="form-group">
                <label asp-for="Passwork" class="control-label">Contraseña</label>
                <input asp-for="Passwork" type="password" class="form-control textData" />
                <span asp-validation-for="Passwork" class="text-danger2"></span>
            </div>
            <div class="form-group">
                <label asp-for="Mobile" class="control-label">Celular</label>
                <input asp-for="Mobile" class="form-control textData" />
                <span asp-validation-for="Mobile" class="text-danger2"></span>
            </div>
            <div class="form-group">
                <label asp-for="Mail" class="control-label">Correo</label>
                <input asp-for="Mail" class="form-control textData" />
                <span asp-validation-for="Mail" class="text-danger2"></span>
            </div>
            <div class="form-group">
                <label asp-for="TypeAffiliation" class="control-label">Afiliación</label>
                @Html.DropDownList("TypeAffiliation", (IEnumerable<SelectListItem>)ViewBag.ListCompanyDocumentType, htmlAttributes: new { @class = "form-control textData" })
            </div>
            <div class="form-group" align="center">
                <input type="submit" value="Registrarse" class="btn btn-primary" />
            </div>
        </form>

        <div align="center">
            <form asp-action="Login">
                <input align="center" type="submit" value="Volver" class="btn btn-success" />
            </form>
        </div>

    </div>

    <div class="col-md-4"> </div>

</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
